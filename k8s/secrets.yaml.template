apiVersion: v1
kind: Secret
metadata:
  name: moto-secrets
  namespace: moto
type: Opaque
stringData:
  SECRET_KEY: "<generate-a-strong-django-secret-key>"
  DATABASE_URL: "postgres://motoadmin:<password>@<postgres-fqdn>:5432/moto?sslmode=require"
  REDIS_URL: "rediss://:<redis-key>@<redis-hostname>:6380/0"
  POSTGRES_EXPORTER_DSN: "postgresql://motoadmin:<password>@<postgres-fqdn>:5432/moto?sslmode=require"
  GRAFANA_ADMIN_PASSWORD: "<grafana-password>"
